<resources>

    <!-- Base application theme. -->

    <style name="PathAppTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppThemeNoTitle" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <!-- this is useful to prevent the keyboard from covering up the input fields -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomFontTextViewStyle.Home.RegisterLabelCustom">
        <item name="fontVariant">regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">130dp</item>
    </style>

    <style name="CustomFontTextViewStyle.Home.RegisterNameCustom">
        <item name="fontVariant">black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">55dp</item>
    </style>

    <style name="CustomFontTextViewStyle.Home.RegisterLabelCustomForField">
        <item name="fontVariant">regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">115dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="android:actionMenuTextColor">#FFFFFF</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeNoTitle.NoActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextAppearance</item>
    </style>

    <style name="AppThemeNoTitle.NoActionBar.NavigationDrawerStyle">
        <item name="android:textSize">20sp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">70dp</item><!-- item size in menu-->
    </style>

    <style name="MenuTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/menu_item_text_size</item>
    </style>

    <style name="AppThemeNoTitle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeNoTitle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeNoActionBarAndTitleWithEditButton" parent="AppThemeNoTitle.NoActionBar">
        <item name="actionOverflowButtonStyle">@style/OverflowMenuButton</item>
    </style>

    <style name="OverflowMenuButton" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_icon_edit</item>
    </style>

    <style name="Material.Drawable.RadioButton.AdvancedSearch" parent="Material.Drawable.RadioButton">
        <item name="rbd_width">40dp</item>
        <item name="rbd_height">40dp</item>
        <item name="rbd_strokeSize">2dp</item>
        <item name="rbd_radius">15dp</item>
        <item name="rbd_innerRadius">10dp</item>
        <item name="rbd_strokeColor">@drawable/advanced_search_rdb_stoke_color_list</item>
    </style>

    <style name="Material.Drawable.CheckBox.AdvancedSearch" parent="Material.Drawable.CheckBox">
        <item name="cbd_width">40dp</item>
        <item name="cbd_height">40dp</item>
        <item name="cbd_tickColor">@color/white</item>
        <item name="cbd_strokeColor">@drawable/advanced_search_cbd_stoke_color_list</item>
        <item name="cbd_cornerRadius">0dp</item>
        <item name="cbd_strokeSize">3dp</item>
        <item name="cbd_boxSize">25dp</item>
    </style>

    <style name="PathDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="PathAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>
</resources>
