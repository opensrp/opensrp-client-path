<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="@dimen/list_item_height"
    android:weightSum="23" android:background="#eeeeee" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:id="@+id/woman_profile_info_layout"
        android:layout_weight="6"
        android:background="#ffffff"
        android:layout_marginRight="1dp">

        <ImageView
            android:layout_width="@dimen/client_profile_pic_width"
            android:layout_height="80dp"
            android:id="@+id/woman_profilepic"
            android:src="@drawable/pk_woman_avtar"
            android:layout_margin="2dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp">

            <org.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Woman ID of 4teen"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:id="@+id/woman_id"
                android:textColor="@color/button_material_dark"
                android:textSize="14sp" />

            <org.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:text="Woman Name"
                android:id="@+id/woman_name"
                android:textColor="@color/light_blue"
                android:textSize="14sp" />

            <org.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="husband Name"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:id="@+id/woman_husbandname"
                android:textSize="14sp" />

            <org.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="father name"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:id="@+id/woman_fathername"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:background="#ffffff"
        android:layout_marginRight="1dp">

        <org.opensrp.view.customControls.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            style="@style/CustomFontTextViewStyle.ListView.Normal"
            android:id="@+id/woman_age"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
    android:layout_height="match_parent"
    android:layout_width="0dp"
    android:layout_weight="2"
        android:background="#ffffff"
        android:layout_marginRight="1dp">

    <org.opensrp.view.customControls.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EPI Number"
        style="@style/CustomFontTextViewStyle.ListView.Medium"
        android:id="@+id/woman_epi_number"
        android:textColor="@color/alert_in_progress_blue"
        android:textSize="14sp" />
</LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent" android:background="#ffffff"
        android:layout_weight="3"
        android:layout_marginRight="1dp">

            <org.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDD and GA"
                android:id="@+id/woman_edd"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:textSize="14sp"
                android:layout_gravity="top" />

            <org.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDD and GA"
                android:id="@+id/woman_ga"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:textSize="14sp"
                android:layout_gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:background="#ffffff"
        android:layout_marginRight="1dp">

        <org.opensrp.view.customControls.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            style="@style/CustomFontTextViewStyle.ListView.Normal"
            android:id="@+id/woman_contact_number"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:background="#ffffff"
        android:layout_marginRight="1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/woman_last_vaccine_check"
                android:src="@drawable/ic_yes_small"
                android:layout_gravity="right"
                android:scaleType="fitXY" />

            <org.opensrp.view.customControls.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Vaccine Name"
                android:id="@+id/woman_last_vaccine"
                style="@style/CustomFontTextViewStyle.ListView.Medium"/>

        </LinearLayout>
            <org.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Vaccine Date"
                android:id="@+id/woman_last_visit_date"
                style="@style/CustomFontTextViewStyle.ListView.Normal"
                android:textSize="14sp"/>

    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/woman_next_visit_holder"
            android:background="@color/transparent_blue">

            <org.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Vaccine Name"
                android:id="@+id/woman_next_visit_vaccine"
                android:maxLines="2"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                />

            <org.opensrp.view.customControls.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Visit Date"
                android:id="@+id/woman_next_visit_date"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:textSize="14sp" />
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
